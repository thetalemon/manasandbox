---
import "@fontsource/zen-kaku-gothic-antique";
import { ViewTransitions } from "astro:transitions";

export interface Props {
  title: string;
}

const { title } = Astro.props;
---

<style lang="scss">
  body {
    font-family: "Zen Kaku Gothic Antique", sans-serif;
  }
  header,
  footer {
    a,
    a:visited,
    a:hover a:focus {
      color: #fff;
      text-decoration: none;
    }
  }
  header {
    background: #44617b;
    color: #fff;
    vertical-align: baseline;
    padding: 4px 8px;
    & > h1 {
      margin: 0;
      font-size: 18px;
      font-weight: 300;
    }
  }
  footer {
    background: #44617b;
    color: #fff;
    text-align: center;
    padding: 4px 8px;
  }
  main {
    display: flex;
    flex-direction: column;
    justify-content: center;
    min-height: calc(100vh - 27px - 16px - 24px);
    margin: 0 auto;
  }
  @media only screen and (max-width: 500px) {
    header > h1 {
      font-size: 18px;
    }
  }
</style>
<style is:global>
  ul {
    margin: 0;
    padding: 0;
  }
  li {
    list-style: none;
  }
  html {
    font-family: system-ui, sans-serif;
    background-color: #fff;
  }
  body {
    margin: 0;
    line-height: 1.6;
  }
  a {
    text-decoration: none;
    color: #9857ca;
  }
  a:visited {
    text-decoration: none;
    color: #37ad3d;
  }
  a:hover {
    opacity: 0.5;
  }
</style>

<html lang="ja">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" href="/favicon.ico" sizes="32x32" />
    <link rel="icon" href="/icon.svg" type="image/svg+xml" />
    <link rel="apple-touch-icon" href="/apple-touch-icon.png" />
    <link rel="manifest" href="/manifest.webmanifest" />
    <meta name="generator" content={Astro.generator} />
    <meta
      name="description"
      content="WEBエンジニア まなさすのポートフォリオ。"
    />
    <meta property="og:site_name" content="manasandbox" />
    <meta property="og:title" content={title} />
    <meta property="og:url" content="https://manasas.dev" />
    <meta
      property="og:description"
      content="WEBエンジニア まなさすのポートフォリオ。"
    />
    <meta property="og:image" content="https://manasas.dev/ogp.png" />
    <title>{title}</title>
    <ViewTransitions />
  </head>
  <body>
    <header>
      <h1><a href="/">Mana's sandbox</a></h1>
    </header>
    <main>
      <slot />
    </main>
    <footer>
      <a href="https://manasas.dev/" rel="me">© 2022 manasas</a>
    </footer>
  </body>
</html>
