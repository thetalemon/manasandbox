---
import '@fontsource/zen-kaku-gothic-antique'
import { ClientRouter } from 'astro:transitions'
import '@/styles/global.css'

export interface Props {
  title: string
}

const { title } = Astro.props
---

<html lang="ja">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" href="/favicon.ico" sizes="32x32" />
    <link rel="icon" href="/icon.svg" type="image/svg+xml" />
    <link rel="apple-touch-icon" href="/apple-touch-icon.png" />
    <link rel="manifest" href="/manifest.webmanifest" />
    <meta name="generator" content={Astro.generator} />
    <meta
      name="description"
      content="WEBエンジニア まなさすのポートフォリオ。"
    />
    <meta property="og:site_name" content="manasandbox" />
    <meta property="og:title" content={title} />
    <meta property="og:url" content="https://manasas.dev" />
    <meta
      property="og:description"
      content="WEBエンジニア まなさすのポートフォリオ。"
    />
    <meta property="og:image" content="https://manasas.dev/ogp.png" />
    <title>{title}</title>
    <ClientRouter />
  </head>
  <body>
    <header>
      <h1><a href="/">Mana's sandbox</a></h1>
      <ul class="pageLinks">
        <li>
          <a href="/posts">posts</a>
        </li>
        <li>
          <a href="/resume">resume</a>
        </li>
      </ul>
    </header>
    <main>
      <slot />
    </main>
    <footer>
      <a href="https://manasas.dev/" rel="me">© 2022 manasas</a>
    </footer>
  </body>
</html>

<style lang="scss">
  header,
  footer {
    a,
    a:visited,
    a:hover a:focus {
      color: #fff;
      text-decoration: none;
    }
  }
  header {
    display: flex;
    justify-content: space-between;
    background: #44617b;
    color: #fff;
    vertical-align: baseline;
    padding: 8px 16px;
    & > h1 {
      margin: 0;
      font-size: 18px;
      font-weight: 300;
    }
    .pageLinks {
      display: flex;
      gap: 16px;
    }
  }
  footer {
    background: #44617b;
    color: #fff;
    text-align: center;
    padding: 4px 8px;
  }
</style>
