---
export interface Props {
  title: string;
  titleSrc?: string;
}

const { title, titleSrc } = Astro.props;
---

<section>
  <h2>
    {titleSrc ? <img src={titleSrc} alt={title} /> : { title }}
  </h2>
  <div class="sectionWrapper">
    <slot />
  </div>
</section>
<style lang="scss">
  h2 {
    display: block;
    /* width: fit-content; */
    margin: 1rem auto 0.5rem auto;

    img {
      height: 28px;
      object-fit: contain;
    }
  }

  .sectionWrapper {
    padding-left: 8px;
  }
</style>
