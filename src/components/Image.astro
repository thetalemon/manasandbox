---
import { Picture } from "@astrojs/image/components";

export interface Props {
  width: number;
  alt: string;
  imagePathWithOutExt: string;
  aspectRatio: number | `${number}:${number}` | undefined;
  radius?: boolean;
}

const { width, alt, imagePathWithOutExt, aspectRatio, radius } = Astro.props;

const webpFullPath = (imagePathWithOutExt: string) => {
  return imagePathWithOutExt + ".webp";
};
---

<Picture
  src={webpFullPath(imagePathWithOutExt)}
  widths={[width]}
  sizes="(max-width: 800px) 100vw, 800px"
  formats={["webp"]}
  alt={alt}
  aspectRatio={aspectRatio}
  class={`${radius && "radius"}`}
/>

<style lang="scss">
  img {
    max-width: 100%;
    width: 100%;
    height: auto;
    &.radius {
      border-radius: 12px 12px 0 0;
    }
  }
</style>
