---
import { Picture } from "@astrojs/image/components";

export interface Props {
  width: number;
  alt: string;
  imagePathWithOutExt: string;
  aspectRatio: number | `${number}:${number}` | undefined;
}

const { width, alt, imagePathWithOutExt, aspectRatio } = Astro.props;

const webpFullPath = (imagePathWithOutExt: string) => {
  return imagePathWithOutExt + ".webp";
};
---

<Picture
  src={webpFullPath(imagePathWithOutExt)}
  widths={[width]}
  sizes="(max-width: 800px) 100vw, 800px"
  formats={["webp"]}
  alt={alt}
  aspectRatio={aspectRatio}
/>

<style>
  img {
    max-width: 100%;
    width: 100%;
    height: auto;
  }
</style>
