---
import { LINK_LIST } from '@/data/link'

const convert2Path = (filename: string) => {
  const prefix = '/social/'
  return prefix + filename
}

const ICON_SIZE = 32
---

<div class="root">
  <ul class="inner">
    {
      LINK_LIST.map((item) => (
        <li>
          <a href={item.url} target="_blank" rel="noreferrer noopener me">
            <img
              class="ico"
              src={convert2Path(item.img)}
              height={ICON_SIZE}
              width={ICON_SIZE}
              alt={item.name}
            />
          </a>
        </li>
      ))
    }
  </ul>
</div>

<style lang="scss">
  .root {
    background-color: #fff;
    width: calc(100% - 24px * 2);
    padding: 16px 24px;
    display: flex;
    justify-content: center;

    .inner {
      display: flex;
      justify-content: space-between;
      align-items: center;
      width: 100%;
      max-width: 400px;
    }
  }
</style>
