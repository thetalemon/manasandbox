---
import { PRODUCT_LIST } from "../../data/product";
import Section from "../Section.astro";
import Webp from "../WebpImage.astro";

const convert2Path = (filename: string) => {
  return "/product/" + filename;
};
---

<Section title="制作物">
  <ul class="cardAreaWrapper">
    {
      PRODUCT_LIST.map((item) => (
        <li class="productCard">
          <div class="imageWrapper">
            <Webp
              imagePathWithOutExt={convert2Path(item.img)}
              width={280}
              alt={item.name}
              aspectRatio="7:5"
            />
          </div>
          <div class="cardContentArea">
            <p class="titleWithGtihubIco">
              {item.name}
              <span class="githubIcon">
                <a
                  class="linkIco"
                  href={item.github}
                  rel="noreferrer"
                  target="_blank"
                >
                  <img
                    src="/social/github.svg"
                    width="20px"
                    height="20px"
                    alt={`${item.name}のgithubへのリンク`}
                  />
                </a>
                {item.url && (
                  <a
                    class="linkIco"
                    href={item.url}
                    rel="noreferrer"
                    target="_blank"
                  >
                    <img
                      src="/general/link.svg"
                      width="20px"
                      height="20px"
                      alt={`${item.name}のgithubへのリンク`}
                    />
                  </a>
                )}
              </span>
            </p>
            <p>{item.text}</p>
          </div>
        </li>
      ))
    }
  </ul>
</Section>
<style>
  .cardAreaWrapper {
    display: grid;
    grid-row-gap: 24px;
    grid-column-gap: 16px;
    grid-template-columns: repeat(auto-fill, minmax(200px, 1fr));
    margin-top: 16px;
    margin-bottom: 24px;
  }
  .imageWrapper {
    margin-bottom: 8px;
    text-align: center;
    width: 100%;
    border-radius: 10px;
  }
  .cardContentArea {
    padding: 0 8px 16px 8px;
  }
  .productCard {
    width: 100%;
    display: flex;
    flex-direction: column;
    margin: 0 auto;
    background: white;
    box-shadow: 2px 2px 3px 3px #cccccc;
  }
  .titleWithGtihubIco {
    font-size: 18px;
  }
  .linkIco {
    margin-left: 8px;
  }
  p {
    margin: 0;
  }
</style>
