---
import type { ProductItem } from "../../lib/newt/products";
import { getProductItemList } from "../../lib/newt/products";
import Section from "../Section.astro";
import { Image } from "astro:assets";

const prodistList: ProductItem[] = await getProductItemList();
---

<Section title="制作物">
  <ul class="cardAreaWrapper">
    {
      prodistList.map((item) => {
        const image: ImageMetadata = {
          src: item.image.src,
          width: item.image.width,
          height: item.image.height,
          format: item.image.fileType.includes("webp") ? "webp" : "png",
        };

        return (
          <li class="productCard">
            <div class="imageWrapper">
              <Image
                src={image}
                sizes="(max-width: 800px) 100vw, 800px"
                alt={item.title}
              />
            </div>
            <div class="cardContentArea">
              <p class="title">{item.title}</p>
              <p>{item.comment}</p>
              {item.url && (
                <p class="link">
                  <a href={item.url} rel="noreferrer" target="_blank">
                    サイトを見る
                  </a>
                </p>
              )}
              <p class="link">
                <a href={item.github} rel="noreferrer" target="_blank">
                  GitHub
                </a>
              </p>
            </div>
          </li>
        );
      })
    }
  </ul>
</Section>

<style lang="scss">
  .cardAreaWrapper {
    display: grid;
    grid-row-gap: 16px;
    grid-column-gap: 16px;
    grid-template-columns: repeat(auto-fill, minmax(250px, 1fr));
    margin-top: 16px;
    .imageWrapper {
      margin-bottom: 8px;
      text-align: center;
      width: 100%;
      border-radius: 4px 4px 0 0;
      overflow: hidden;
      aspect-ratio: 280/200;
      border-bottom: #cccccc 1px solid;
      img {
        width: 100%;
        height: 100%;
        object-fit: cover;
        object-position: left top;
      }
    }
    .cardContentArea {
      padding: 0 8px 16px 8px;
    }
    .productCard {
      width: 100%;
      display: flex;
      flex-direction: column;
      margin: 0 auto;
      background: white;
      border: #cccccc 1px solid;
      border-radius: 6px;
    }
    .title {
      font-size: 24px;
    }
    p {
      margin: 0;
    }
    .link {
      text-align: right;
      position: relative;
      margin: 8px 30px 8px 0;
      a {
        &::after {
          content: "→";
          position: absolute;
          top: 0;
          right: -24px;
        }
        &:hover {
          &::after {
            content: "→";
            position: absolute;
            top: 2px;
            right: -28px;
          }
        }
      }
    }
  }
</style>
