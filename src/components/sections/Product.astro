---
import { PRODUCT_LIST } from "../../data/product";
import Section from "../Section.astro";
import Image from "../Image.astro";
import IconLink from "../IconLink.astro";

const convert2Path = (filename: string) => {
  return "/product/" + filename;
};
---

<Section title="制作物">
  <ul class="cardAreaWrapper">
    {
      PRODUCT_LIST.map((item) => (
        <li class="productCard">
          <div class="imageWrapper">
            <Image
              imagePathWithOutExt={convert2Path(item.img)}
              width={280}
              alt={item.name}
              aspectRatio="7:5"
            />
          </div>
          <div class="cardContentArea">
            <p class="titleWithGtihubIco">
              {item.name}
              <span>
                <IconLink
                  href={item.github}
                  src="/social/github.svg"
                  alt={`${item.name}のgithubへのリンク`}
                />
                {item.url && (
                  <IconLink
                    href={item.url}
                    src="/general/link.svg"
                    alt={`${item.name}のサイトへのリンク`}
                  />
                )}
              </span>
            </p>
            <p>{item.text}</p>
          </div>
        </li>
      ))
    }
  </ul>
</Section>

<style>
  .cardAreaWrapper {
    display: grid;
    grid-row-gap: 24px;
    grid-column-gap: 16px;
    grid-template-columns: repeat(auto-fill, minmax(200px, 1fr));
    margin-top: 16px;
    margin-bottom: 24px;
  }
  .imageWrapper {
    margin-bottom: 8px;
    text-align: center;
    width: 100%;
    border-radius: 10px;
  }
  .cardContentArea {
    padding: 0 8px 16px 8px;
  }
  .productCard {
    width: 100%;
    display: flex;
    flex-direction: column;
    margin: 0 auto;
    background: white;
    box-shadow: 2px 2px 3px 3px #cccccc;
  }
  .titleWithGtihubIco {
    font-size: 18px;
  }
  .linkIco {
    margin-left: 8px;
  }
  p {
    margin: 0;
  }
</style>
