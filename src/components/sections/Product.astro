---
import { PRODUCT_LIST } from "../../data/product";
import Section from "../Section.astro";
import ImageWrap from "../ImageWrap.astro";

const convert2Path = (filename: string) => {
  return "/product/" + filename;
};
---

<Section title="制作物">
  <ul class="cardAreaWrapper">
    {
      PRODUCT_LIST.map((item) => (
        <li class="productCard">
          <div class="imageWrapper">
            <ImageWrap
              imagePathWithOutExt={convert2Path(item.img)}
              width={280}
              height={200}
              alt={item.name}
              radius
            />
          </div>
          <div class="cardContentArea">
            <p class="title">{item.name}</p>
            <p>{item.text}</p>
            {item.url && (
              <p class="link">
                <a href={item.url} rel="noreferrer" target="_blank">
                  サイトを見る
                </a>
              </p>
            )}
            <p class="link">
              <a href={item.github} rel="noreferrer" target="_blank">
                GitHub
              </a>
            </p>
          </div>
        </li>
      ))
    }
  </ul>
</Section>

<style lang="scss">
  .cardAreaWrapper {
    display: grid;
    grid-row-gap: 24px;
    grid-column-gap: 16px;
    grid-template-columns: repeat(auto-fill, minmax(200px, 1fr));
    margin-top: 16px;
    margin-bottom: 24px;
    .imageWrapper {
      margin-bottom: 8px;
      text-align: center;
      width: 100%;
      border-radius: 10px;
    }
    .cardContentArea {
      padding: 0 8px 16px 8px;
    }
    .productCard {
      width: 100%;
      display: flex;
      flex-direction: column;
      margin: 0 auto;
      background: white;
      box-shadow: 2px 2px 3px 3px #cccccc;
      border-radius: 12px;
    }
    .title {
      font-size: 24px;
    }
    p {
      margin: 0;
    }
    .link {
      text-align: right;
      position: relative;
      margin: 8px 30px 8px 0;
      a {
        &::after {
          content: "→";
          position: absolute;
          top: 0;
          right: -24px;
        }
        &:hover {
          &::after {
            content: "→";
            position: absolute;
            top: 2px;
            right: -28px;
          }
        }
      }
    }
  }
</style>
