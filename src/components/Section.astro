---
export interface Props {
  title: string;
  link?: string;
}

const { title, link } = Astro.props;
---

<section class="root">
  <h2>
    {
      link ? (
        <a href={link} target="_blank" rel="noreferrer noopener me">
          {title}
        </a>
      ) : (
        <span>{title}</span>
      )
    }
  </h2>
  <div class="sectionWrapper">
    <slot />
  </div>
</section>
<style lang="scss">
  .root {
    margin: 0 0.75rem;
  }
  h2 {
    margin: 0 0 0.5rem 0;
    a {
      color: inherit;
    }
  }
  .sectionWrapper {
    padding: 0;
  }
</style>
