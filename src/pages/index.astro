---
import Layout from "../layouts/Layout.astro";
import Links from "../components/Links.astro";
import TopImage from "../components/TopImage.astro";
import BottomImage from "../components/BottomImage.astro";
import Abstract from "../components/Abstract.astro";
import Other from "../components/Other.astro";
import Transmit from "../components/Transmit.astro";
import Product from "../components/Product.astro";
import RssPosts from "../components/RssPosts.astro";
---

<Layout title="manasandbox">
  <TopImage />
  <section class="mainSection">
    <Links />
    <Abstract />
    <RssPosts title="最近のZennの投稿" url="https://zenn.dev/thetalemon/feed" />
    <RssPosts title="最近のnoteの投稿" url="https://note.com/thetalemon/rss" />
    <Transmit />
    <Product />
    <Other />
    <Links />
  </section>
  <BottomImage />
</Layout>

<style>
  .mainSection {
    padding: 0 8px;
  }
  .linkSection {
    padding: 8px 0;
  }
</style>
